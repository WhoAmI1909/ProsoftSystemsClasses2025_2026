{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with Clang (MSVC)",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "--target=x86_64-pc-windows-msvc",
        "-std=c++20",
        "-Wall",
        "-O2",
        "-MD",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-lmsvcrt",
        "-g",
        "-O0"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Сборка с Clang для MSVC"
    }
  ]
}